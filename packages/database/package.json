  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.0.0",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
